<Window x:Class="OE110Prozessdatenbank.ObjectWindows.AddWorkpiece"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Werkstück" Height="299" Width="436" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid x:Name="g_content">
        <Label Content="Material *" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <ComboBox Margin="142,10,10,0" ItemsSource="{Binding Materials}" SelectedItem="{Binding Material}" DisplayMemberPath="Name" VerticalAlignment="Top"/>
        <ComboBox Margin="142,68,10,0"  ItemsSource="{Binding Geometries}" Text="{Binding Geometry}" VerticalAlignment="Top" IsEditable="True"/>
        <TextBox Height="23" Margin="142,37,10,0" TextWrapping="Wrap" Text="{Binding Label}" VerticalAlignment="Top"/>
        <TextBox Height="23" Margin="142,95,10,0" TextWrapping="Wrap" Text="{Binding Kind}" VerticalAlignment="Top"/>
        <TextBox Height="23" Margin="142,123,10,0" TextWrapping="Wrap" Text="{Binding BatchNumber}" VerticalAlignment="Top"/>
        <DatePicker Margin="142,151,10,0" SelectedDate="{Binding PurchaseDate}" VerticalAlignment="Top"/>
        <CheckBox Content="Einwegprobe" IsChecked="{Binding isOneWay}" HorizontalAlignment="Left" Margin="142,180,0,0" VerticalAlignment="Top"/>
        <Button x:Name="bt_save" Content="speichern" Command="{Binding SaveWorkpiece}" IsEnabled="{Binding SaveWorkpiece.CanSave}" HorizontalAlignment="Right" Margin="0,0,6,7" VerticalAlignment="Bottom" Width="75" Click="bt_save_Click"/>
        <Button x:Name="bt_cancel" Content="abbrechen" HorizontalAlignment="Right" Margin="0,0,87,7" VerticalAlignment="Bottom" Width="75" Click="bt_cancel_Click"/>
        <Label Content="Beschriftung *" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Geometrie" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top"/>
        <Label Content="Art der Probe" HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top"/>
        <Label Content="Chargennummer" HorizontalAlignment="Left" Margin="10,119,0,0" VerticalAlignment="Top"/>
        <Label Content="Kaufdatum" HorizontalAlignment="Left" Margin="10,149,0,0" VerticalAlignment="Top"/>
        <CheckBox Content="Aktiv" IsChecked="{Binding isActive}" IsEnabled="{Binding canChangeActive}" HorizontalAlignment="Left" Margin="142,200,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
