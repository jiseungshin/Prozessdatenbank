<Window x:Class="OE110Prozessdatenbank.Controls.AddGlass"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Glassorte hinzufügen" Height="149" Width="300" ResizeMode="NoResize">
    <Grid>
        <Label Content="Bezeichnung" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top"/>
        <TextBox Height="23" Margin="103,10,10,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top"/>
        <TextBox Height="23" Margin="103,38,10,0" TextWrapping="Wrap" Text="{Binding Company}" VerticalAlignment="Top"/>
        <Button Content="speichern" Margin="207,0,10,18" Height="20" Command="{Binding SaveGlass}" IsEnabled="{Binding SaveGlass.CanSave}" VerticalAlignment="Bottom" Click="Button_Click"/>
        <Button Content="abbrechen" HorizontalAlignment="Right" Margin="0,0,90,18" VerticalAlignment="Bottom" Width="75" Click="Button_Click_1"/>
        <Label Content="Hersteller" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top"/>
        

    </Grid>
</Window>
