<Window x:Class="OE110Prozessdatenbank.Controls.CIssue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CIssue" Height="183" Width="442">
    <Grid>
        <TextBox x:Name="tb_remark" Height="71" Margin="211,41,10,0" TextWrapping="Wrap" Text="{Binding Remark}" VerticalAlignment="Top"/>
        <Label Content="Bemerkung" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="110"/>
        <Button x:Name="bt_save" Content="speichern" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Command="{Binding save}" IsEnabled="{Binding save.CanSave}" Click="bt_save_Click"/>
        <Button x:Name="bt_cancel" Content="abbrechen" HorizontalAlignment="Right" Margin="0,0,90,10" VerticalAlignment="Bottom" Width="75" Click="bt_cancel_Click"/>
        <TextBox x:Name="tb_projectName" Height="23" Margin="211,10,10,0" TextWrapping="Wrap" Text="{Binding Description}" VerticalAlignment="Top"/>
        <Label Content="Fragestellung / Versuchreihe" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="183"/>

    </Grid>
</Window>
